<View style="display: flex;">
	<!-- <Header value="Select label and start to click on image"/> -->
	<View style="flex: 90%">
		<Image name="image" value="$image" width="750px" maxWidth="1000px" zoom="true" zoomControl="true" brightnessControl="true" contrastControl="true" />
	</View>
	<View style="flex: 10%; margin-left: 1em">
		<Header value="Segment" />
		<PolygonLabels name="label" toName="image" strokeWidth="3" pointSize="small" opacity="0.9">
			<Label value="Mouse" background="#ffd92f"/>
		</PolygonLabels>
		<Header value="Keypoints" />
		<KeyPointLabels name="keypoint-label" toName="image" strokewidth="2" opacity="1" >
			<Label value="Nose" background="#ffff99"/>
			<Label value="Left Ear" background="#a6cee3"/>
			<Label value="Right Ear" background="#1f78b4"/>
			<Label value="Neck" background="#ffff99"/>
			<Label value="Left Hip" background="#b2df8a"/>
			<Label value="Right Hip" background="#33a02c"/>
			<Label value="TailBase" background="#e31a1c"/>
			<Label value="TailTip" background="#fb9a99"/>
		</KeyPointLabels>
	</View>
</View>